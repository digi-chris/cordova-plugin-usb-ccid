<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:rim="http://www.blackberry.com/ns/widgets"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="cordova-plugin-usb-ccid"
    version="0.0.1">
    <name>CcidUsb</name>
    <description>Cordova USB CCID Reader</description>
    <license>Apache 2.0</license>
    <keywords>cordova,ccid,usb,payment</keywords>

    <js-module src="www/ccid.js" name="CcidUsb">
        <clobbers target="CcidUsb"/>
    </js-module>

    <!-- android -->
    <platform name="android">
        <config-file target="config.xml" parent="/*">
            <feature name="CcidUsb">
                <param name="android-package" value="tech.barnard.cordova.plugins.CcidUsb"/>
				<param name="onload" value="true"/>
            </feature>
        </config-file>

        <source-file src="src/android/CcidUsb.java" target-dir="src/tech/barnard/cordova/plugins/ccid"/>
        <source-file src="src/android/EidCardCallback.java" target-dir="src/tech/barnard/cordova/plugins/ccid"/>

        <source-file src="src/android/usb/CCID.java" target-dir="src/tech/barnard/cordova/plugins/ccid/usb"/>
        <source-file src="src/android/usb/CCIDException.java" target-dir="src/tech/barnard/cordova/plugins/ccid/usb"/>
        <source-file src="src/android/usb/CardCallback.java" target-dir="src/tech/barnard/cordova/plugins/ccid/usb"/>

        <source-file src="src/android/diagnostic/CCIDDescriptor.java" target-dir="src/tech/barnard/cordova/plugins/ccid/diagnostic"/>
        <source-file src="src/android/diagnostic/EndPointDescriptor.java" target-dir="src/tech/barnard/cordova/plugins/ccid/diagnostic"/>
        <source-file src="src/android/diagnostic/InterfaceDescriptor.java" target-dir="src/tech/barnard/cordova/plugins/ccid/diagnostic"/>

    </platform>
</plugin>
